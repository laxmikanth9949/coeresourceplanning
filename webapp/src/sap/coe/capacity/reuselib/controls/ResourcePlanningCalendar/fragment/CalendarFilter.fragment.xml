			<ViewSettingsFilterItem
				text="{i18n>FRAGMENT_CALENDARFILTER_FILTERITEM_HEADER_LOCATION}"
				key="LOC"
				multiSelect="false">
				<items>
					<ViewSettingsItem text="{i18n>FRAGMENT_CALENDARFILTER_DIALOG_ONSITE}" key="RPTASTDataSet/results/___EQ___Onsite___X___/Location" />
					<ViewSettingsItem text="{i18n>FRAGMENT_CALENDARFILTER_DIALOG_REMOTE}" key="RPTASTDataSet/results/___EQ___Remote___X___/Location"/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem
				text="{i18n>FRAGMENT_CALENDARFILTER_FILTERITEM_HEADER_AVAILABILITY}"
				key="AVL"
				multiSelect="false">
				<items>
					<ViewSettingsItem text="{i18n>FRAGMENT_CALENDARFILTER_DIALOG_NOALLOCATION}" key="0" />
					<ViewSettingsItem text="{i18n>FRAGMENT_CALENDARFILTER_DIALOG_OPEN_DAYS}" key="1" />					
				</items>
			</ViewSettingsFilterItem>
			<!-- Temp removed until solution finialised in backend -->
			<ViewSettingsFilterItem
				text="{i18n>FRAGMENT_CALENDARFILTER_FILTERITEM_STAFFING}"
				key="STA"
				multiSelect="false">
				<items>
					<ViewSettingsItem text="{i18n>FRAGMENT_CALENDARFILTER_DIALOG_STAFFER}" key="___EQ___X___X___/Staffer" />
					<ViewSettingsItem text="{i18n>FRAGMENT_CALENDARFILTER_DIALOG_NONSTAFFER}" key="___NE___X___X___/Staffer"/>
