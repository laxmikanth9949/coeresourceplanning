				key="TA"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="{i18n>FRAGMENT_CALENDARFILTER_DIALOG_ONLY_REMOTE}" key="RPTASTDataSet/results/___EQ___ZAB___X___/SHPName"/>					
