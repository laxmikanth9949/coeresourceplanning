    title="{i18n>FRAGMENT_TABLE_SETTINGS_TITLE}"
    sortItems="{/PCalendarSortUIModel/SortItems}"
    sortDescending="{/PCalendarSortUIModel/Descending}">
        <sortItems>
            <ViewSettingsItem
